<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>selah-api: [THREAD: %thread -> %date{ISO8601}] %highlight(%-5level) %cyan(%logger{15}%line %X) - %msg %n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>